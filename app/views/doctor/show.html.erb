<h1>Welcome <%= @doctor.name %></h1>

<p>Specialty: <%= @doctor.specialty %></p>
<p>University Attended: <%= @doctor.university %></p>
<p>Hospital Currently Employed At: <%= @doctor.hospital.name %></p>

<section>
  <h3>Patients</h3>
  <ul>
    <% @doctor.patients.each do |patient| %>
      <li id="patient-<%= patient.id %>">
        <%= patient.name %>
        <%= button_to "Delete Patient", "/doctor_patients/#{patient.id}?doctor_id=#{@doctor.id}", method: :delete %>
      </li>
    <% end %>
  </ul>
</section>
